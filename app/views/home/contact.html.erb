<div class="wrapper-inner px-4">
  <div class="heading mx-2 mb-4" style="text-align: center">
    <h1 class="title display-4"><%= t('home.contact.title') %></h1>
    <p class="description lead"><%= t('home.contact.description') %></p>
  </div>   
  <%= form_tag request_contact_path, method: 'post', class: "contact-form pt-4" do %>
    <%= label_tag :name, t('home.contact.enter_name'), class: "contact-label"%>
    <%= text_field_tag :name, '', title: t('home.contact.enter_name'), size: 50, class: "contact-input", placeholder: t('home.contact.req'), required: true %>
    <hr class="no-pointer">
    <%= label_tag :email, t('home.contact.enter_email'), class: "contact-label"%>
    <%= email_field_tag :email, '', title: t('home.contact.enter_email'), class: "contact-input", placeholder: t('home.contact.req'), required: true %>
    <hr class="no-pointer">
    <%= label_tag :telephone, t('home.contact.enter_telephone'), class: "contact-label"%>
    <%= telephone_field_tag :telephone, '', title: t('home.contact.enter_telephone'), class: "contact-input", placeholder: t('home.contact.req'), required: true %>
    <hr class="no-pointer">
    <%= label_tag :message, t('home.contact.enter_message'), class: "contact-label"%>
    <%= text_area_tag :message, '', title: t('home.contact.enter_message'), rows: 5, class: "contact-input", placeholder: t('home.contact.req'), required: true %>
    <hr class="no-pointer">
    <%= submit_tag t('home.contact.submit'), class: "glow-shadow-2 btn btn-outline-info"%>
  <% end %>
</div>
